<h1>新規投稿</h1>

<!-- todolistsから来るってこと -->
<!-- fも特にここでは何かもともと意味があるわけではない -->
<%= form_for(@list, url: '/todolists')do |f| %>

  <h4>タイトル</h4>
  <!-- テーブルのカラムのデータを出力 -->
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

    <!-- 追加部分 -->
  <h4>画像</h4>
  <%= f.attachment_field :image %>

  <%= f.submit '投稿' %>

<% end %>

